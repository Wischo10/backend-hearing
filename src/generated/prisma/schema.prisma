// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma" // Lokasi output Prisma Client Anda
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Model User untuk autentikasi dan relasi
model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String

  // Relasi: Satu User bisa membuat banyak LaporanKegiatan
  laporanKegiatan LaporanKegiatan[]
}

// Model untuk menyimpan informasi dokumen submission
model UploadedDocument {
  id           Int       @id @default(autoincrement())
  namaPengirim String
  fileName     String
  filePath     String    @unique
  fileMimeType String
  fileSize     Int
  uploadDate   DateTime  @default(now())
  status       String    @default("PENDING")
  reviewedAt   DateTime?

  // --- PERBAIKAN: Memberi nama eksplisit pada relasi ---
  // Menunjukkan bahwa satu dokumen submission bisa memiliki satu laporan kegiatan.
  laporanKegiatan LaporanKegiatan? @relation("SubmissionLaporan")
  // ----------------------------------------------------

  @@map("uploaded_documents")
}

// Model untuk menyimpan laporan kegiatan
model LaporanKegiatan {
  id              Int      @id @default(autoincrement())
  deskripsi       String   @db.Text
  fotoKegiatanUrl String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relasi ke User yang membuat laporan
  userId Int
  user   User @relation(fields: [userId], references: [id])

  // --- PERBAIKAN: Memberi nama eksplisit pada relasi ---
  // Foreign key yang menghubungkan laporan ke submission.
  // Opsional (?) karena tidak semua laporan dibuat dari submission.
  // Unik karena satu submission hanya bisa menghasilkan satu laporan.
  submissionId Int?              @unique
  submission   UploadedDocument? @relation("SubmissionLaporan", fields: [submissionId], references: [id])
  // ----------------------------------------------------

  @@map("laporan_kegiatan")
}

// Enum untuk role pengguna, bisa dikembangkan lebih lanjut
enum Role {
  ADMIN
}
